<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- 상단 동아리 간단 정보  보기 -->
            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <!-- 사용자 정보 -->
                <LinearLayout
                    android:id="@+id/more_layout_btn0"
                    android:background="?android:attr/selectableItemBackground"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="left"
                    android:gravity="left">
                    <!-- 동아리 이름 -->
                    <TextView
                        android:id="@+id/more_layout_clubName"
                        android:text="동아리 이름"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0" />
                    <!-- 동아리 멤버수  -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="멤버 수 : "
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:shadowColor="#6b6b6b"
                            android:shadowRadius="5.0"
                            android:shadowDx="2.0"
                            android:shadowDy="2.0"/>
                        <TextView
                            android:id="@+id/more_layout_clubCnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textColor="#000000"
                            android:textSize="12dp"
                            android:shadowColor="#6b6b6b"
                            android:shadowRadius="5.0"
                            android:shadowDx="2.0"
                            android:shadowDy="2.0"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 하단 더보기 버튼 -->
            <LinearLayout
                android:background="@drawable/border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#00cacaca"
                    />
                <!-- 동아리 멤버  -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/more_layout_btn1"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 사진 -->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mcbtn1" />
                    <!-- 내용 -->
                    <TextView
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="동아리 멤버 "
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 가입신청 현황 -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/more_layout_btn2"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 사진 -->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mbtn3" />
                    <!-- 내용 -->
                    <TextView
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="가입신청 현황"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#cacaca"
                    />
                <!-- 일정 보기 -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/more_layout_btn3"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 사진 -->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mcbtn3" />
                    <!-- 내용 -->
                    <TextView
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="일정 모아 보기"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="10dp"
                    android:background="#cacaca"
                    />
                <!-- 동아리 탈퇴 -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/more_layout_btn4"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 사진 -->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mcbtn4" />
                    <!-- 내용 -->
                    <TextView
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="동아리 탈퇴"
                        android:textColor="#f5635b"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 동아리 폐쇠 -->
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/more_layout_btn5"
                    android:background="?android:attr/selectableItemBackground"
                    android:padding="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!-- 사진 -->
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/mcbtn5" />
                    <!-- 내용 -->
                    <TextView
                        android:shadowColor="#6b6b6b"
                        android:shadowRadius="5.0"
                        android:shadowDx="2.0"
                        android:shadowDy="2.0"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="동아리 삭제"
                        android:textColor="#f5635b"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#00cacaca"
                    />
            </LinearLayout>

        </LinearLayout>


    </ScrollView>


</LinearLayout>