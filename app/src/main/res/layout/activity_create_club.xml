<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 최상단 -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >
            <!-- 뒤로가기 버튼 -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/create_club_layout_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_chevron_left_black_24dp" />
            </android.support.constraint.ConstraintLayout>
            <!-- 개설하기 버튼 -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/create_club_layout_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="완료"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:shadowColor="#6b6b6b"
                    android:shadowRadius="5.0"
                    android:shadowDx="2.0"
                    android:shadowDy="2.0"/>
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>

        <!-- 입력부 -->
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/create_club_layout_title"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="간단한 정보를 입력해주세요."
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold"
                android:shadowColor="#6b6b6b"
                android:shadowRadius="5.0"
                android:shadowDx="2.0"
                android:shadowDy="2.0"/>

            <!-- 동아리명 입력-->
            <EditText
                android:id="@+id/create_club_layout_clubName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:inputType="text"
                android:textSize="27dp"
                android:hint="동아리 이름"/>
            <!-- 동아리 소개 입력 -->
            <EditText
                android:id="@+id/create_club_layout_clubContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:inputType="text"
                android:textSize="22dp"
                android:hint="동아리 간단 소개"/>
            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- 동아리 위치 입력 -->
                <EditText
                    android:id="@+id/create_club_layout_clubLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:hint="동아리 위치"/>
                <!-- 동아리 핸드폰 번호 입력 -->
                <EditText
                    android:layout_marginLeft="20dp"
                    android:id="@+id/create_club_layout_clubPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:textSize="16dp"
                    android:hint="연락가능 번호"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>